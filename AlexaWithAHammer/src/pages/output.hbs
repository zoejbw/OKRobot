    <!-- this is a handlebars IF statement, checking for a custom "color" parameter set in server.js -->
 <script>
   var synth = window.speechSynthesis;
</script>
    
    
  </head>
  {{#if sentiment}} 
    <script type="text/javascript">
      
      function say(something){
      var utterThis = new SpeechSynthesisUtterance(something);
      utterThis.voice = synth.getVoices()[0];

      utterThis.lang = "us-EN";
      utterThis.pitch = 1;
      utterThis.rate = 0.9;
        
        if ( "{{sentiment}}" == "green"){
      utterThis.pitch = 1.1;
      utterThis.rate = 1.1;
            console.log("green");
                  }else if( "{{sentiment}}" == "red"){
      utterThis.pitch = 0.9;
      utterThis.rate = 0.9;
                           console.log("red");
                  }else{
      utterThis.pitch = 1;
      utterThis.rate = 1;
      console.log("neutral");

                  }
        
      synth.speak(utterThis);
    }

   
    </script>
    {{/if}} 
  
  
  {{#if color}} 
    <script type="text/javascript">
      say("{{color}}");
          
    </script>
  {{/if}} 
  
  {{#if color}} 
    <style>
      body {
        background-color: {{sentiment}};
      }
    </style>
    {{/if}} 
  
  
     <body>
           <div class="bgbody"> </div>

    <div class="wrapper">
      <div class="content" role="main">
        <!-- this is the start of content for our page -->
        <!-- add text indicating that we've changed color OR had an error -->
        {{#if color}}
          <p class="color-info">
            <b>{{color}}</b><br>
            
          </p>
        {{else}}<p class="color-info">
            <br> <br>
            
          </p>
        {{/if}}  
        {{#if colorError}}
          <p class="color-info">
            There was an error with your message.
          </p>
        {{/if}}

        
        <!-- add text indicating that we've changed color OR had an error -->
       <form class="color-search" method="post">
        
            <button type="submit">Check Messages</button>
          </form>

  </body>
